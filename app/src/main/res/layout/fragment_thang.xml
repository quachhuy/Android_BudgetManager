<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/money"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    tools:context=".ui.NgayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_thongke_thang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Tháng: "
            android:inputType="number"
            android:textColor="#000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_date_thang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/border_button"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tổng thu:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_thu_thang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:text=""
        android:textColor="#4CAF50"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tổng chi:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_chi_thang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:text=""
        android:textColor="#E91E1E"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tích lũy:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_tichluy_thang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:text=""
        android:textColor="#4CAF50"
        android:textSize="24sp" />
    >
</LinearLayout>